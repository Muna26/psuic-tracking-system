// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  IT_SUPPORT
  ADMIN
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum EquipmentStatus {
  OPERATIONAL
  DAMAGED
  UNDER_REPAIR
  LOST
}

model User {
  id              Int       @id @default(autoincrement())
  username        String    @unique
  email           String    @unique
  role            Role      @default(STUDENT)
  reportedTickets Ticket[]  @relation("Reporter")
  assignedTickets Ticket[]  @relation("Assignee")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Ticket {
  id             Int          @id @default(autoincrement())
  title          String
  description    String       @db.Text
  status         TicketStatus @default(OPEN)
  urgency        Urgency      @default(MEDIUM)
  room_code      String
  equipment_code String?
  evidence_image String?

  reporter_id Int
  reporter    User @relation("Reporter", fields: [reporter_id], references: [id])

  assignee_id Int?
  assignee    User? @relation("Assignee", fields: [assignee_id], references: [id])

  equipment   Equipment? @relation(fields: [equipment_code], references: [code])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Equipment {
  id            Int             @id @default(autoincrement())
  code          String          @unique // Unique QR code content
  name          String
  room_location String
  status        EquipmentStatus @default(OPERATIONAL)
  image_url     String?
  tickets       Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}