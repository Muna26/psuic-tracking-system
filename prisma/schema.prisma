generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String
  image       String
  brand       String
  type        String
  capacity    String
  price       Decimal
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("products")
}

model Booking {
  id               Int      @id @default(autoincrement())
  name             String
  machineModel     String   @map("machine_model")
  issueDescription String   @map("issue_description")
  appointmentDate  DateTime @map("appointment_date")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("bookings")
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  content   String
  name      String
  company   String?
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("testimonials")
}

model BlogPost {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  content   String
  author    String
  date      DateTime
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("blog_posts")
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("contact_messages")
}
